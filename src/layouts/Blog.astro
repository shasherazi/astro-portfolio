---
import Layout from "./Layout.astro";
const { blogTitle = "Add blog title", date = "Add date" } = Astro.props;
---

<Layout title={blogTitle}>
  <div class="flex flex-col gap-2 h-full">
    <h1 class="text-4xl max-lg:text-3xl max-md:text-2xl max-sm:text-xl">
      {blogTitle}
    </h1>
    <p class="text-sm max-sm:text-xs text-accent">
      {date}
    </p>
  </div>
  <div class="mt-8">
    <slot />
  </div>
</Layout>
