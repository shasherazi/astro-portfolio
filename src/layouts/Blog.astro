---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="flex flex-col gap-2 h-full">
    <h1 class="text-4xl max-lg:text-3xl max-md:text-2xl max-sm:text-xl">
      {frontmatter.title}
    </h1>
    <p class="text-sm max-sm:text-xs text-accent">
      {frontmatter.date}
    </p>
  </div>
  <div class="mt-8">
    <slot />
  </div>
</Layout>
